@model TaskManager.Models.Project

@{
    ViewData["Title"] = "Detalii Proiect";
    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
    var isOrganizer = Model.CreatorId == currentUserId;
    var isAdmin = User.IsInRole("Admin");
    var canManage = isOrganizer || isAdmin;
}

@section Styles {
    <style>
        .tab-content {
            display: none;
        }

            .tab-content.active {
                display: block;
            }

        .tab {
            cursor: pointer;
            padding: 10px 20px;
            border: none;
            background: none;
            border-bottom: 2px solid transparent;
        }

            .tab.active {
                border-bottom: 2px solid var(--bs-primary);
                font-weight: bold;
                color: var(--bs-primary);
            }

        .avatar {
            width: 32px;
            height: 32px;
            background-color: #e9ecef;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }

        .avatar-lg {
            width: 48px;
            height: 48px;
            font-size: 1.2rem;
        }
    </style>
}

<div class="container mt-4">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
        <div>
            <h1 class="display-6 fw-bold">@Model.Title</h1>
            <p class="text-muted mb-0">
                Creat de <strong>@(Model.Creator?.UserName ?? "Unknown")</strong> la @Model.DateCreated.ToString("dd MMMM yyyy")
            </p>
        </div>
        <div>
            <span class="badge bg-secondary">@Model.ProjectTasks?.Count() Task-uri</span>
            <span class="badge bg-info text-dark">@Model.Members?.Count() Membri</span>
        </div>
    </div>

    <div class="tabs mb-4 border-bottom">
        <button class="tab active" onclick="showTab('overview')">
            <i class="bi bi-grid"></i> Overview
        </button>
        <button class="tab" onclick="showTab('tasks')">
            <i class="bi bi-list-check"></i> Task-uri
        </button>
        <button class="tab" onclick="showTab('members')">
            <i class="bi bi-people"></i> Membri
        </button>
        <button class="tab" onclick="showTab('ai-summary')">
            <i class="bi bi-stars"></i> AI Summary
        </button>
        @if (canManage)
        {
            <button class="tab" onclick="showTab('settings')">
                <i class="bi bi-gear"></i> Setări
            </button>
        }
    </div>

    <div id="overview" class="tab-content active">
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-info-circle"></i> Despre Proiect</h5>
                    </div>
                    <div class="card-body">
                        <p>@Model.Description</p>

                        <div class="row g-3 mt-4">
                            <div class="col-md-4">
                                <div class="p-3 border rounded text-center">
                                    <h3 class="mb-0">@(Model.ProjectTasks?.Count ?? 0)</h3>
                                    <small class="text-muted">Total Task-uri</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="p-3 border rounded text-center">
                                    <h3 class="text-success mb-0">
                                        @(Model.ProjectTasks?.Count(t => t.Status == TaskManager.Models.TaskStatus.Completed) ?? 0)
                                    </h3>
                                    <small class="text-muted">Finalizate</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="p-3 border rounded text-center">
                                    <h3 class="text-primary mb-0">@(Model.Members?.Count ?? 0)</h3>
                                    <small class="text-muted">Membri</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="bi bi-calendar"></i> Activitate</h6>
                    </div>
                    <div class="card-body">
                        <p class="text-muted small mb-2">
                            <i class="bi bi-plus-circle"></i> Proiect creat: <br />
                            <strong>@Model.DateCreated.ToString("dd MMM yyyy, HH:mm")</strong>
                        </p>
                        @if (Model.ProjectTasks != null && Model.ProjectTasks.Any())
                        {
                            var latestTask = Model.ProjectTasks.OrderByDescending(t => t.StartDate).FirstOrDefault();
                            if (latestTask != null)
                            {
                                <p class="text-muted small mb-0">
                                    <i class="bi bi-check-circle"></i> Ultimul task: <br />
                                    <strong>@latestTask.Title</strong>
                                </p>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="tasks" class="tab-content">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="mb-0">Task-uri</h3>
            @if (canManage)
            {
                <a asp-controller="Tasks" asp-action="New" asp-route-projectId="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Adaugă Task
                </a>
            }
        </div>

        @if (Model.ProjectTasks != null && Model.ProjectTasks.Any())
        {
            <div class="list-group">
                @foreach (var task in Model.ProjectTasks.OrderBy(t => t.Status))
                {
                    <div class="list-group-item list-group-item-action p-3">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@task.Title</h5>
                            <small class="text-muted">@task.EndDate.ToString("dd/MM/yyyy")</small>
                        </div>
                        <p class="mb-1 text-muted small">@task.Description</p>
                        <div class="mt-2">
                            <span class="badge rounded-pill @(task.Status == TaskManager.Models.TaskStatus.Completed ? "bg-success" : task.Status == TaskManager.Models.TaskStatus.InProgress ? "bg-warning text-dark" : "bg-secondary")">
                                @task.Status
                            </span>
                            @if (!string.IsNullOrEmpty(task.AssignedUserId))
                            {
                                <span class="badge bg-light text-dark border ms-2">
                                    <i class="bi bi-person"></i> @(task.AssignedUser?.UserName ?? "Asignat")
                                </span>
                            }
                            <a asp-controller="Tasks" asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-link text-decoration-none ms-2">Detalii</a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-secondary text-center">
                Nu există task-uri. Începe prin a adăuga unul!
            </div>
        }
    </div>

    <div id="members" class="tab-content">
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center gap-3">
                                    <span class="avatar avatar-lg">@(Model.Creator?.UserName?.Substring(0, 1).ToUpper() ?? "O")</span>
                                    <div>
                                        <strong>@(Model.Creator?.UserName ?? "Unknown")</strong>
                                        <div class="small text-muted">@Model.Creator?.Email</div>
                                    </div>
                                </div>
                                <span class="badge bg-primary">Organizator</span>
                            </div>
                        </div>

                        @if (Model.Members != null)
                        {
                            foreach (var member in Model.Members)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center gap-3">
                                            <span class="avatar">@(member.UserName?.Substring(0, 1).ToUpper() ?? "M")</span>
                                            <div>
                                                <strong>@member.UserName</strong>
                                                <div class="small text-muted">@member.Email</div>
                                            </div>
                                        </div>
                                        @if (canManage)
                                        {
                                            <form asp-action="RemoveMember" method="post" class="d-inline">
                                                <input type="hidden" name="projectId" value="@Model.Id" />
                                                <input type="hidden" name="userId" value="@member.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Eliminați acest membru?');">
                                                    Elimină
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            @if (canManage)
            {
                <div class="col-lg-4">
                    <div class="card mt-3 mt-lg-0">
                        <div class="card-header">
                            <h6 class="mb-0"><i class="bi bi-person-plus"></i> Invită Membru</h6>
                        </div>
                        <div class="card-body">
                            <form asp-action="AddMember" method="post">
                                <input type="hidden" name="projectId" value="@Model.Id" />
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" name="email" class="form-control" required placeholder="nume@exemplu.com" />
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Trimite Invitație</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div id="ai-summary" class="tab-content">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-stars"></i> Raport AI</h5>
                <form asp-action="GenerateSummary" asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="bi bi-magic"></i> Generează Raport Nou
                    </button>
                </form>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.AiSummary))
                {
                    <div class="p-4 bg-light border rounded">
                        <h6 class="text-primary mb-3"><i class="bi bi-robot"></i> Analiza curentă a proiectului:</h6>
                        <p class="mb-0" style="white-space: pre-line; line-height: 1.6;">@Model.AiSummary</p>
                    </div>
                    <small class="text-muted mt-2 d-block">
                        * Acest rezumat a fost generat automat folosind inteligența artificială pe baza task-urilor curente.
                    </small>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="display-1 mb-3">🤖</div>
                        <h4>Niciun raport generat</h4>
                        <p class="text-muted">Apasă butonul de generare pentru a analiza progresul proiectului.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    @if (canManage)
    {
        <div id="settings" class="tab-content">
            <div class="row">
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Setări Proiect</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">
                                    <i class="bi bi-pencil"></i> Editează Detaliile
                                </a>
                                <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                                    <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Sigur ștergi proiectul?');">
                                        <i class="bi bi-trash"></i> Șterge Proiectul
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function showTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.getElementById(tabName).classList.add('active');
            event.target.closest('.tab').classList.add('active');
        }
    </script>
}