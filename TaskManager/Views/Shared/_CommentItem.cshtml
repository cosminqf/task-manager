@model TaskManager.Models.Comment

@{
    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
    var isAuthor = Model.UserId == currentUserId;
    var isAdmin = User.IsInRole("Admin");
    var canEdit = isAuthor || isAdmin;
}

<div class="card mb-md">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-sm">
            <div class="d-flex align-items-center gap-2">
                <span class="avatar">@(Model.User?.UserName?.Substring(0, 1).ToUpper() ?? "?")</span>
                <div>
                    <strong>@(Model.User?.UserName ?? "Utilizator șters")</strong>
                    <small class="text-muted d-block">@Model.DateAdded.ToString("dd MMM yyyy HH:mm")</small>
                </div>
            </div>
            
            @if (canEdit)
            {
                <div class="d-flex gap-1">
                    @if (isAuthor)
                    {
                        <a asp-controller="Comments" asp-action="Edit" asp-route-id="@Model.Id" 
                           class="btn btn-ghost btn-sm" title="Editează comentariu" aria-label="Editează">
                            <i class="bi bi-pencil"></i>
                        </a>
                    }
                    <form asp-controller="Comments" asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-ghost btn-sm text-danger" 
                                onclick="return confirm('Sigur doriți să ștergeți acest comentariu?');" 
                                title="Șterge comentariu" aria-label="Șterge">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </div>
            }
        </div>
        
        <p class="mb-0">@Model.Content</p>
    </div>
</div>
