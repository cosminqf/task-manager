@model IEnumerable<TaskManager.Models.ProjectTask>

@{ 
    ViewData["Title"] = "Task-uri";
    var notStarted = Model?.Where(t => t.Status == TaskManager.Models.TaskStatus.NotStarted).ToList() ?? new List<TaskManager.Models.ProjectTask>();
    var inProgress = Model?.Where(t => t.Status == TaskManager.Models.TaskStatus.InProgress).ToList() ?? new List<TaskManager.Models.ProjectTask>();
    var completed = Model?.Where(t => t.Status == TaskManager.Models.TaskStatus.Completed).ToList() ?? new List<TaskManager.Models.ProjectTask>();
}

<div class="container mt-4 mb-xl">
    <div class="d-flex justify-content-between align-items-center mb-xl">
        <div>
            <h1 class="mb-sm"><i class="bi bi-list-check"></i> Toate Task-urile</h1>
            <p class="text-muted">GestioneazƒÉ »ôi organizeazƒÉ toate task-urile tale</p>
        </div>
        <a asp-action="New" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Task Nou
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Tabs pentru View Mode -->
    <div class="tabs mb-lg">
        <button class="tab active" onclick="showView('cards')">
            <i class="bi bi-grid-3x3"></i> Carduri
        </button>
        <button class="tab" onclick="showView('kanban')">
            <i class="bi bi-kanban"></i> Kanban Board
        </button>
        <button class="tab" onclick="showView('list')">
            <i class="bi bi-list-ul"></i> ListƒÉ
        </button>
    </div>

    @if (Model == null || !Model.Any())
    {
        ViewBag.Icon = "üìù";
        ViewBag.Title = "Nu existƒÉ task-uri √ÆncƒÉ";
        ViewBag.Description = "CreeazƒÉ primul tƒÉu task pentru a √Æncepe sƒÉ organizezi munca.";
        ViewBag.ActionText = "CreeazƒÉ Task";
        ViewBag.ActionUrl = Url.Action("New");
        
        <partial name="_EmptyState" />
    }
    else
    {
        <!-- Cards View -->
        <div id="cards-view">
            <div class="row g-4">
                @foreach (var task in Model.OrderBy(t => t.Status).ThenBy(t => t.EndDate))
                {
                    <div class="col-md-6 col-lg-4">
                        <partial name="_TaskCard" model="task" />
                    </div>
                }
            </div>
        </div>

        <!-- Kanban Board View -->
        <div id="kanban-view" style="display: none;">
            <div class="kanban-board">
                <!-- Not Started Column -->
                <div class="kanban-column">
                    <div class="kanban-column-header">
                        <span><i class="bi bi-circle"></i> Ne√Æncepute</span>
                        <span class="kanban-count">@notStarted.Count</span>
                    </div>
                    @if (!notStarted.Any())
                    {
                        <div class="empty-state p-md">
                            <div class="empty-state-icon" style="font-size: 2rem;">üìù</div>
                            <p class="text-muted small mb-0">Niciun task</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var task in notStarted)
                        {
                            <div class="mb-md">
                                <partial name="_TaskCard" model="task" />
                            </div>
                        }
                    }
                </div>

                <!-- In Progress Column -->
                <div class="kanban-column">
                    <div class="kanban-column-header">
                        <span><i class="bi bi-hourglass-split"></i> √én Progres</span>
                        <span class="kanban-count">@inProgress.Count</span>
                    </div>
                    @if (!inProgress.Any())
                    {
                        <div class="empty-state p-md">
                            <div class="empty-state-icon" style="font-size: 2rem;">‚è≥</div>
                            <p class="text-muted small mb-0">Niciun task</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var task in inProgress)
                        {
                            <div class="mb-md">
                                <partial name="_TaskCard" model="task" />
                            </div>
                        }
                    }
                </div>

                <!-- Completed Column -->
                <div class="kanban-column">
                    <div class="kanban-column-header">
                        <span><i class="bi bi-check-circle"></i> Finalizate</span>
                        <span class="kanban-count">@completed.Count</span>
                    </div>
                    @if (!completed.Any())
                    {
                        <div class="empty-state p-md">
                            <div class="empty-state-icon" style="font-size: 2rem;">‚úÖ</div>
                            <p class="text-muted small mb-0">Niciun task</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var task in completed)
                        {
                            <div class="mb-md">
                                <partial name="_TaskCard" model="task" />
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <!-- List View -->
        <div id="list-view" style="display: none;">
            <div class="card">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Task</th>
                                <th>Proiect</th>
                                <th>Status</th>
                                <th>Asignat</th>
                                <th>Deadline</th>
                                <th>Ac»õiuni</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var task in Model.OrderBy(t => t.EndDate))
                            {
                                <tr>
                                    <td>
                                        <strong>@task.Title</strong>
                                        <div class="small text-muted">@(task.Description?.Length > 50 ? task.Description.Substring(0, 50) + "..." : task.Description)</div>
                                    </td>
                                    <td>
                                        <a asp-controller="Projects" asp-action="Details" asp-route-id="@task.ProjectId" class="text-decoration-none">
                                            @task.Project?.Title
                                        </a>
                                    </td>
                                    <td><partial name="_StatusBadge" model="task.Status" /></td>
                                    <td>
                                        @if (task.AssignedUser != null)
                                        {
                                            <div class="chip">
                                                <span class="avatar avatar-sm">@task.AssignedUser.UserName?.Substring(0, 1).ToUpper()</span>
                                                @task.AssignedUser.UserName
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var daysUntil = (task.EndDate - DateTime.Now).Days;
                                            var isUrgent = daysUntil <= 2 && task.Status != TaskManager.Models.TaskStatus.Completed;
                                        }
                                        <span class="@(isUrgent ? "text-danger fw-bold" : "")">
                                            @task.EndDate.ToString("dd MMM yyyy")
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-action="Show" asp-route-id="@task.Id" class="btn btn-sm btn-ghost" title="Vezi detalii" aria-label="Vezi detalii">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-ghost" title="EditeazƒÉ" aria-label="EditeazƒÉ">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function showView(viewName) {
            // Hide all views
            document.getElementById('cards-view').style.display = 'none';
            document.getElementById('kanban-view').style.display = 'none';
            document.getElementById('list-view').style.display = 'none';
            
            // Remove active from all tabs
            document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
            
            // Show selected view
            document.getElementById(viewName + '-view').style.display = 'block';
            
            // Add active to clicked tab
            event.target.closest('.tab').classList.add('active');
        }
    </script>
}


<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-5 fade-in-up">
        <h1 class="page-title">
            <i class="bi bi-list-task"></i> Toate Task-urile
        </h1>
        <a asp-action="New" class="btn btn-success-custom btn-action btn-lg">
            <i class="bi bi-plus-circle"></i> AdaugƒÉ Task Nou
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow fade-in-up" style="border-radius: 15px; border: none;">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4">
        @if (Model != null)
        {
            @foreach (var task in Model)
            {
                <div class="col-md-4 fade-in-up">
                    <div class="task-card">
                        @if (!string.IsNullOrEmpty(task.MediaUrl))
                    {
                        if (task.MediaUrl.StartsWith("/images/"))
                        {
                            <img src="@task.MediaUrl" class="task-media-preview" alt="@task.Title" style="height: 220px; width: 100%; object-fit: cover; border-radius: 15px 15px 0 0; margin-bottom: 0;">
                        }
                        else
                        {
                            <div class="ratio ratio-16x9" style="border-radius: 15px 15px 0 0; overflow: hidden; margin-bottom: 0;">
                                <iframe src="@task.MediaUrl" allowfullscreen></iframe>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-center bg-light" style="height: 220px; border-radius: 15px 15px 0 0;">
                            <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                        </div>
                    }

                    <div class="task-card-header">
                        <h5 class="task-card-title" title="@task.Title">
                            <i class="bi bi-check2-square"></i> @task.Title
                        </h5>
                    </div>

                    <div class="task-card-body">
                        <p class="task-description">
                            @(task.Description?.Length > 100 
                                ? task.Description.Substring(0, 100) + "..." 
                                : task.Description)
                        </p>

                        <div class="task-meta">
                            <span class="task-date">
                                <i class="bi bi-calendar-event"></i> @task.StartDate.ToString("dd MMM yyyy")
                            </span>
                            <span class="task-date">
                                <i class="bi bi-flag-fill"></i> @task.EndDate.ToString("dd MMM yyyy")
                            </span>
                        </div>

                        <div class="text-center mt-3">
                            <div class="dropdown">
                                <button class="status-badge status-@(task.Status.ToString().ToLower()) dropdown-toggle border-0" 
                                        type="button" 
                                        data-bs-toggle="dropdown" 
                                        aria-expanded="false"
                                        style="cursor: pointer;">
                                    @(task.Status == TaskManager.Models.TaskStatus.NotStarted ? "Ne√Ænceput" :
                                      task.Status == TaskManager.Models.TaskStatus.InProgress ? "√én Progres" :
                                      "Finalizat")
                                </button>
                                <ul class="dropdown-menu shadow" style="border-radius: 10px;">
                                    @if (task.Status != TaskManager.Models.TaskStatus.NotStarted)
                                    {
                                        <li>
                                            <form asp-action="ChangeStatus" asp-route-id="@task.Id" method="post" class="d-inline">
                                                <input type="hidden" name="newStatus" value="@TaskManager.Models.TaskStatus.NotStarted" />
                                                <button type="submit" class="dropdown-item">
                                                    <span class="status-badge status-notstarted d-inline-block" style="padding: 0.25rem 0.5rem; font-size: 0.75rem;">
                                                        Ne√Ænceput
                                                    </span>
                                                </button>
                                            </form>
                                        </li>
                                    }
                                    @if (task.Status != TaskManager.Models.TaskStatus.InProgress)
                                    {
                                        <li>
                                            <form asp-action="ChangeStatus" asp-route-id="@task.Id" method="post" class="d-inline">
                                                <input type="hidden" name="newStatus" value="@TaskManager.Models.TaskStatus.InProgress" />
                                                <button type="submit" class="dropdown-item">
                                                    <span class="status-badge status-inprogress d-inline-block" style="padding: 0.25rem 0.5rem; font-size: 0.75rem;">
                                                        √én Progres
                                                    </span>
                                                </button>
                                            </form>
                                        </li>
                                    }
                                    @if (task.Status != TaskManager.Models.TaskStatus.Completed)
                                    {
                                        <li>
                                            <form asp-action="ChangeStatus" asp-route-id="@task.Id" method="post" class="d-inline">
                                                <input type="hidden" name="newStatus" value="@TaskManager.Models.TaskStatus.Completed" />
                                                <button type="submit" class="dropdown-item">
                                                    <span class="status-badge status-completed d-inline-block" style="padding: 0.25rem 0.5rem; font-size: 0.75rem;">
                                                        Finalizat
                                                    </span>
                                                </button>
                                            </form>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="task-card-footer d-flex justify-content-between flex-wrap gap-2">
                        <a asp-action="Show" asp-route-id="@task.Id" class="btn btn-sm btn-primary-custom btn-action">
                            <i class="bi bi-eye"></i> Vezi
                        </a>
                        <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-warning-custom btn-action">
                            <i class="bi bi-pencil"></i> EditeazƒÉ
                        </a>
                        <form asp-action="Delete" asp-route-id="@task.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger-custom btn-action" 
                                    onclick="return confirm('E»ôti sigur cƒÉ vrei sƒÉ »ôtergi acest task?')">
                                <i class="bi bi-trash"></i> »òterge
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            }
        }
    </div>
</div>