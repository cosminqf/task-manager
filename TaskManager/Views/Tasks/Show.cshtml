@model TaskManager.Models.ProjectTask

@{ ViewData["Title"] = Model.Title; }

<div class="container mt-5 mb-5">
    <div class="task-container fade-in-up">
        <div class="task-header d-flex justify-content-between align-items-center">
            <h2 class="mb-0">
                <i class="bi bi-check2-square"></i> @Model.Title
            </h2>
            <span class="status-badge status-@(Model.Status.ToString().ToLower())">
                @(Model.Status == TaskManager.Models.TaskStatus.NotStarted ? "Neînceput" :
                  Model.Status == TaskManager.Models.TaskStatus.InProgress ? "În Progres" :
                  "Finalizat")
            </span>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.MediaUrl))
        {
            <div class="mb-4 text-center">
                @if (Model.MediaUrl.StartsWith("/images/"))
                {
                    <img src="@Model.MediaUrl" class="img-fluid rounded shadow" style="max-height: 500px; border-radius: 15px;" />
                }
                else
                {
                    <div class="ratio ratio-16x9 mx-auto shadow" style="max-width: 900px; border-radius: 15px; overflow: hidden;">
                        <iframe src="@Model.MediaUrl" allowfullscreen></iframe>
                    </div>
                }
            </div>
        }

        <div class="task-detail-section">
            <div class="task-detail-label">
                <i class="bi bi-file-text"></i> Descriere
            </div>
            <div class="task-detail-content">
                @Model.Description
            </div>
        </div>

        <hr style="border-top: 2px solid #e9ecef; margin: 2rem 0;" />
        
        <div class="row task-detail-section">
            <div class="col-md-6">
                <div class="task-detail-label">
                    <i class="bi bi-calendar-event"></i> Data de Început
                </div>
                <div class="task-detail-content">
                    @Model.StartDate.ToString("dd MMMM yyyy")
                </div>
            </div>
            <div class="col-md-6">
                <div class="task-detail-label">
                    <i class="bi bi-flag-fill"></i> Termen Limită
                </div>
                <div class="task-detail-content">
                    @Model.EndDate.ToString("dd MMMM yyyy")
                </div>
            </div>
        </div>

        <div class="d-flex gap-3 mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning-custom btn-action btn-lg">
                <i class="bi bi-pencil"></i> Editează Task-ul
            </a>
            <a asp-action="Index" class="btn btn-secondary-custom btn-action btn-lg">
                <i class="bi bi-arrow-left"></i> Înapoi la Listă
            </a>
        </div>

        <hr class="my-5" />

        <div class="row">
            <div class="col-md-8">
                <h4><i class="bi bi-chat-left-text"></i> Comentarii</h4>

                <div class="card mb-4">
                    <div class="card-body">
                        <form asp-controller="Comments" asp-action="New" method="post">
                            <input type="hidden" name="ProjectTaskId" value="@Model.Id" />
                            
                            <div class="mb-3">
                                <textarea name="Content" class="form-control" rows="3" placeholder="Scrie un comentariu..." required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-sm">Postează</button>
                        </form>
                    </div>
                </div>

                @foreach (var comm in Model.Comments.OrderByDescending(c => c.DateAdded))
                {
                    <div class="card mb-3 border-0 shadow-sm">
                        <div class="card-body p-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div>
                                    <strong>@(comm.User?.UserName ?? "Utilizator șters")</strong>
                                    <small class="text-muted ms-2">@comm.DateAdded.ToString("dd/MM/yyyy HH:mm")</small>
                                </div>
                                
                                @if (comm.UserId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                                {
                                    <div class="d-flex gap-2">
                                        <a asp-controller="Comments" asp-action="Edit" asp-route-id="@comm.Id" class="btn btn-link text-primary p-0 border-0" style="font-size: 0.9rem;">
                                            <i class="bi bi-pencil"></i> Editează
                                        </a>
                                        <form asp-controller="Comments" asp-action="Delete" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@comm.Id" />
                                            <button type="submit" class="btn btn-link text-danger p-0 border-0" style="font-size: 0.9rem;" onclick="return confirm('Sigur dorești să ștergi acest comentariu?');">
                                                <i class="bi bi-trash"></i> Șterge
                                            </button>
                                        </form>
                                    </div>
                                }
                            </div>
                            <p class="mb-0">@comm.Content</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>