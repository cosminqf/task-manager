@model TaskManager.Models.Comment

@{ ViewData["Title"] = "Editează Comentariu"; }

<div class="container mt-4 mb-xl">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Editează Comentariul
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ProjectTaskId" />
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="DateAdded" />

                        <div class="form-group">
                            <label asp-for="Content" class="form-label">
                                <i class="bi bi-chat-text"></i> Conținut Comentariu
                            </label>
                            <textarea asp-for="Content" class="form-control" rows="5" 
                                      placeholder="Editează comentariul tău..." required></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Salvează
                            </button>
                            <a asp-controller="Tasks" asp-action="Show" asp-route-id="@Model.ProjectTaskId" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Anulează
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
