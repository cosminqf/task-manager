<!-- CTA Final -->
<section class="py-xl text-center" style="background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%); color: white;">
    <div class="container">
        <h2 class="display-5 fw-bold mb-md">Gata să începi?</h2>
        <p class="lead mb-xl" style="opacity: 0.9;">
            Alătură-te miilor de echipe care folosesc TaskManager pentru a-și îndeplini obiectivele.
        </p>
        
        @if (!isAuthenticated)
        {
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-lg" style="background: white; color: var(--color-primary); font-weight: 600;">
                <i class="bi bi-rocket-takeoff"></i> Creează Cont Gratuit
            </a>
        }
        else
        {
            <a asp-controller="Projects" asp-action="Index" class="btn btn-lg" style="background: white; color: var(--color-primary); font-weight: 600;">
                <i class="bi bi-folder"></i> Vezi Proiectele Tale
            </a>
        }
    </div>
</section>

