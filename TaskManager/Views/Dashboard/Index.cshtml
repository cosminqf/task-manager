@model List<TaskManager.Models.ProjectTask>

@{
    ViewData["Title"] = "Dashboard";
}

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
}

<div class="container mt-5 mb-5">
    <div class="dashboard-header mb-5">
        <div class="welcome-section">
            <h1>👋 Salut, @User.Identity?.Name!</h1>
            <p class="lead text-muted">Ai o privire de ansamblu asupra activitatii tale.</p>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm h-100 border-0 border-start border-4 border-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="text-muted text-uppercase mb-0">Total Task-uri</h6>
                        <div class="icon-shape bg-primary text-white rounded-circle p-2">
                            <i class="bi bi-list-task"></i>
                        </div>
                    </div>
                    <h2 class="mb-0">@ViewBag.TotalTasks</h2>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm h-100 border-0 border-start border-4 border-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="text-muted text-uppercase mb-0">Active</h6>
                        <div class="icon-shape bg-warning text-dark rounded-circle p-2">
                            <i class="bi bi-hourglass-split"></i>
                        </div>
                    </div>
                    <h2 class="mb-0">@ViewBag.ActiveTasks</h2>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm h-100 border-0 border-start border-4 border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="text-muted text-uppercase mb-0">Finalizate</h6>
                        <div class="icon-shape bg-success text-white rounded-circle p-2">
                            <i class="bi bi-check-circle"></i>
                        </div>
                    </div>
                    <h2 class="mb-0">@ViewBag.CompletedTasks</h2>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card shadow-sm h-100 border-0 border-start border-4 border-danger">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="text-muted text-uppercase mb-0">Urgente</h6>
                        <div class="icon-shape bg-danger text-white rounded-circle p-2">
                            <i class="bi bi-exclamation-triangle"></i>
                        </div>
                    </div>
                    <h2 class="mb-0">@ViewBag.UrgentTasks</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-12">
            <h3 class="mb-3">Acces Rapid</h3>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-primary text-white rounded p-3 me-3">
                        <i class="bi bi-folder-fill fs-3"></i>
                    </div>
                    <div>
                        <h5 class="card-title">Proiecte</h5>
                        <p class="card-text text-muted mb-2">Gestioneaza proiectele si structura lor.</p>
                        <a asp-controller="Projects" asp-action="Index" class="btn btn-sm btn-outline-primary">Mergi la Proiecte</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-info text-white rounded p-3 me-3">
                        <i class="bi bi-people-fill fs-3"></i>
                    </div>
                    <div>
                        <h5 class="card-title">Echipa</h5>
                        <p class="card-text text-muted mb-2">Vezi membrii echipei si colaboreaza.</p>
                        <a href="#" class="btn btn-sm btn-outline-info">Vezi Echipa</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12 d-flex gap-2">
            <a asp-action="Index" class="btn @(ViewBag.CurrentFilter == null ? "btn-primary" : "btn-outline-primary")">
                Toate
            </a>
            <a asp-action="Index" asp-route-filter="completed" class="btn @(ViewBag.CurrentFilter == "completed" ? "btn-success" : "btn-outline-success")">
                Finalizate
            </a>
            <a asp-action="Index" asp-route-filter="urgent" class="btn @(ViewBag.CurrentFilter == "urgent" ? "btn-danger" : "btn-outline-danger")">
                Urgente
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <h3 class="mb-4"><i class="bi bi-kanban"></i> Task-urile Mele</h3>

            @if (Model == null || Model.Count == 0)
            {
                <div class="alert alert-light border text-center p-5">
                    <i class="bi bi-inbox fs-1 text-muted mb-3"></i>
                    <h5>Nu ai task-uri atribuite momentan.</h5>
                </div>
            }
            else
            {
                <div class="row g-4">
                    @foreach (var task in Model)
                    {
                        var isUrgent = task.EndDate <= DateTime.Now.AddDays(1) && task.Status != TaskManager.Models.TaskStatus.Completed;

                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 shadow-sm @(isUrgent ? "border-danger" : "")">
                                <div class="card-body">
                                    @if (isUrgent)
                                    {
                                        <div class="badge bg-danger mb-2">URGENT</div>
                                    }
                                    <h5 class="card-title">@task.Title</h5>
                                    <p class="card-text text-muted small">
                                        @if (!string.IsNullOrEmpty(task.Description) && task.Description.Length > 80)
                                        {
                                            @task.Description.Substring(0, 80) <text>...</text>
                                        }
                                        else
                                        {
                                            @task.Description
                                        }
                                </p>

                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <span class="badge rounded-pill
                                                @(task.Status == TaskManager.Models.TaskStatus.Completed ? "bg-success" :
                                                                                        task.Status == TaskManager.Models.TaskStatus.InProgress ? "bg-warning text-dark" : "bg-secondary")">
                                            @task.Status
                                        </span>
                                        <small class="text-muted">
                                            <i class="bi bi-calendar"></i> @task.EndDate.ToString("dd MMM")
                                        </small>
                                    </div>

                                    <div class="mt-3 text-end">
                                        <a asp-controller="Tasks" asp-action="Show" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary">Detalii</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>